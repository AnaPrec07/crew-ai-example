# Example Terraform variables file
# Copy this file to terraform.tfvars and fill in your values

# Required: Your GCP Project ID
project_id = "your-gcp-project-id"

# Optional: GCP region (default: us-central1)
region = "us-central1"

# Optional: Cloud Run service name
service_name = "crew-ai-travel-agent"

# Optional: Container image URL (will be set after first build)
# container_image = "us-central1-docker.pkg.dev/your-project/crew-ai-images/crew-ai:latest"

# Optional: Scaling configuration
min_instances = 0
max_instances = 10

# Optional: Resource limits
cpu_limit    = "2"
memory_limit = "2Gi"

# Optional: Allow public access (set to true for testing)
allow_unauthenticated = false

# Optional: Serper API key for search functionality
serper_api_key = "your-serper-api-key"
